@model CS322_Projekat.Models.Katalog.KatalogAddModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Film</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-controller="Katalog" asp-action="EditPost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(a => a.Id)
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" value="@Model.Naziv" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumIzlaska" class="control-label"></label>
                <input type="text" id="datumIzlaska" name="datumIzlaska" value="@Model.DatumIzlaska" class="datepicker form-control" />
                <span asp-validation-for="DatumIzlaska" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cena" class="control-label"></label>
                <input asp-for="Cena" class="form-control" value="@Model.Cena" />
                <span asp-validation-for="Cena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producent" class="control-label"></label>
                <input asp-for="Producent" class="form-control" value="@Model.Producent" />
                <span asp-validation-for="Producent" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GlavniGlumci" class="control-label"></label>
                <input asp-for="GlavniGlumci" class="form-control" value="@Model.GlavniGlumci" />
                <span asp-validation-for="GlavniGlumci" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Poslovnica:</label>
                <select asp-for="LokacijaId" asp-items="@Model.SveLokacije"></select>
            </div>
            <div class="form-group">
                <p>Slika (upload):</p>
                <input type="file" name="files" multiple />
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-success" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".datepicker").datepicker({
                dateFormat: 'dd/mm/yy',
                autoclose: true,
                todayBtn: 'linked',
                maxDate: "+0d",
                changeYear: true,
                yearRange: "1940:2017",
                defaultDate: "01/01/1940"
            });
        });
    </script>
}