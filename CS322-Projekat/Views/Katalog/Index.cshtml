@model CS322_Projekat.Models.Katalog.AssetIndexModel
    
@{
    ViewBag.Current = "Katalog";
}
<div id="assets">
    <h2>Katalog</h2>
    <div id="assetsTable">
        <table class="table table-condensed table-hover" id="katalogTable">
            <thead>
            <tr>
                <th>Slika</th>
                <th>Naziv</th>
                <th>Producent</th>
                <th>Glavni glumci</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var asset in Model.Assets)
            {
                <tr class="assetRow">
                    <td>
                        <a asp-controller="Katalog" asp-action="Detail" asp-route-id="@asset.Id">
                            <img src="@asset.ImgUrl" class="img-fluid" style="max-width: 150px;"/>
                        </a>
                    </td>
                    <td>@asset.Naziv</td>
                    <td>@asset.Producent</td>
                    <td>@asset.GlavniGlumci</td>
                </tr>
            }
            </tbody>

        </table>
    </div>
</div>
@section Scripts
{
    <script>
        $(document).ready(function() {
            $('#katalogTable').DataTable();
        });
    </script>

}