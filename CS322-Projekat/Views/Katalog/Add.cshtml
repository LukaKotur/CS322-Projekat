@model CS322_Projekat.Models.Katalog.KatalogAddModel


<h2>Add</h2>

<h4>VideoKlubAsset</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-controller="Katalog" asp-action="AddPost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control"/>
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumIzlaska" class="control-label"></label>
                <input type="text" id="datumIzlaska" name="datumIzlaska" class="datepicker form-control"/>
                <span asp-validation-for="DatumIzlaska" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cena" class="control-label"></label>
                <input asp-for="Cena" class="form-control"/>
                <span asp-validation-for="Cena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producent" class="control-label"></label>
                <input asp-for="Producent" class="form-control"/>
                <span asp-validation-for="Producent" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GlavniGlumci" class="control-label"></label>
                <input asp-for="GlavniGlumci" class="form-control"/>
                <span asp-validation-for="GlavniGlumci" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Poslovnica:</label>
                <select asp-for="LokacijaId" asp-items="@Model.SveLokacije"></select>
            </div>
            <div class="form-group">

            </div>
            <div class="form-group">
                <p>Slika (upload):</p>
                <input type="file" name="files" multiple/>
            </div>
            <div class="form-group">
                    <input type="submit" value="Dodaj" class="btn btn-success"/>
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $(".datepicker").datepicker({
                format: 'dd-mm-yyyy',
                autoclose: true,
                todayBtn: 'linked',
                maxDate: "+0d",
                changeYear: true,
                yearRange: "1940:2017",
                defaultDate: "01/01/1940"
            });
        });
    </script>
}